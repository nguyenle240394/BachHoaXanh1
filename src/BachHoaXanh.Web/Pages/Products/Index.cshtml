@page
@model BachHoaXanh.Web.Pages.Prosucts.IndexModel
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using BachHoaXanh.Localization
@using BachHoaXanh.Permissions
@inject IStringLocalizer<BachHoaXanhResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/Products/Index.js" />
}
<abp-card>
     <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Product"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(BachHoaXanhPermissions.Products.Create))
                {
                <abp-button id="NewProductButton"
                            text="@L["NewCustomer"].Value"
                            icon="plus"
                            button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ProductTable"></abp-table>
    </abp-card-body>
</abp-card>
