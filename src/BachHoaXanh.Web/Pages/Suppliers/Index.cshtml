@page
@model BachHoaXanh.Web.Pages.Suppliers.IndexModel
@using Microsoft.AspNetCore.Authorization
@using BachHoaXanh.Permissions
@using BachHoaXanh.Web.Pages.Suppliers
@using Microsoft.Extensions.Localization
@using BachHoaXanh.Localization
@inject IStringLocalizer<BachHoaXanhResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/Suppliers/Index.js" />
}

<abp-card>
     <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Supplier"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(BachHoaXanhPermissions.Suppliers.Create))
                {
                <abp-button id="NewSupplierButton"
                            text="@L["NewSupplier"].Value"
                            icon="plus"
                            button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="SupplierTable"></abp-table>
    </abp-card-body>
</abp-card>