@page
@model BachHoaXanh.Web.Pages.Customers.IndexModel
@using Microsoft.AspNetCore.Authorization
@using BachHoaXanh.Permissions
@using Microsoft.Extensions.Localization
@using BachHoaXanh.Web.Pages.Customers
@using BachHoaXanh.Localization
@inject IStringLocalizer<BachHoaXanhResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/Customers/Index.js" />
}
<abp-card>
     <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Customer"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(BachHoaXanhPermissions.Customers.Create)) 
                { 
                <abp-button id="NewCustomerButton"
                            text="@L["NewCustomer"].Value"
                            icon="plus"
                            button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CustomerTable"></abp-table>
    </abp-card-body>
</abp-card>
